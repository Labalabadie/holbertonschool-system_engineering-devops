#!/usr/bin/env bash
# Sets user in server as "nginx", restarts service. 
chmod 777 /etc/nginx/nginx.conf
sed -i '1s/^/user nginx;\n/' /etc/nginx/nginx.conf
sed -i '/listen 80 default_server;/c\listen 8080 default_server;' /etc/nginx/sites-available/default
sed -i '/listen [::]:80 default_server ipv6only=on;/c\listen [::]:8080 default_server ipv6only=on;' /etc/nginx/sites-available/default
sudo -u nginx service nginx start
